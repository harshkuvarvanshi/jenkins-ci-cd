pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo "Jenkins automatically pulls code from GitHub"
            }
        }

        stage('Build') {
            steps {
                echo "Static HTML project â€“ no build needed"
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t html-site:latest .'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker rm -f html-site || true
                docker run -d -p 8081:80 --name html-site html-site:latest
                '''
            }
        }
    }
}
